<!DOCTYPE html>
<html ng-app="app">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Keep Score</title>
    <link href="~/Content/toastr.min.css" rel="stylesheet" />
    <link href="~/Content/Site.css" rel="stylesheet" />
    <link href="~/app/styles/main.css" rel="stylesheet" />
    <link href="~/app/styles/welcome.css" rel="stylesheet" />
    <link href="~/app/styles/login.css" rel="stylesheet" />
    <link href="~/app/styles/dashboard.css" rel="stylesheet" />
    <link href="~/app/styles/animations.css" rel="stylesheet" />
    <link href="~/app/styles/account.css" rel="stylesheet" />
    <link href="~/app/styles/addTournament.css" rel="stylesheet" />
    <link href="~/app/styles/editUser.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" />
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    @Styles.Render("~/Content/css")
    <base href="/">
</head>
<body>
    <nav class="navbar navbar-expand-sm bg-light navbar-light">
        <a class="home" ng-click="goHome()"><span class="keep">Keep</span> Score</a>
        <div class="links">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a ng-show="signedIn" class="nav-link username" href="account">{{ username }}</a>
                </li>
                <li class="nav-item">
                    <a ng-show="signedIn" class="nav-link" href="dashboard">Dashboard</a>
                </li>
                <li class="nav-item">
                    <a ng-show="!signedIn" class="nav-link" href="login">Login</a>
                </li>
                <li class="nav-item">
                    <a ng-show="signedIn" ng-click="logOut()" class="nav-link" href="/">Logout</a>
                </li>
            </ul>
        </div>
    </nav>
    <div>
        @RenderBody()
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.8.0/angular.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.8.0/angular-route.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.8.0/angular-cookies.js"></script>
    <script src="~/Scripts/toastr.js"></script>
    <script src="~/Scripts/angular-ui/ui-bootstrap-tpls.min.js"></script>
    <script src="~/app/app.js"></script>
    <script src="~/app/shared/services/dataService.js"></script>
    <script src="~/app/controllers/controllers.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
